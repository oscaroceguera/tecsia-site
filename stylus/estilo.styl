@import "nib"
@import 'normalize'
@import 'iconfonts'

vendor-prefixes = webkit o ms moz official

amarillo_A = #f1da00
azul_A = #71c7db
gris_A = #e6e6e6
gris_B = #7d7d7d
gris_C = #656565
naranja_A = #f49839
rosa_A = #e73969
verde_A = #acc90e

	
html  
	font-family Helvetica,sans-serif
	font-size 80%	
body
	background-color gris_A
a 
	text-decoration none

.header 
	display flex
	flex-wrap wrap
	align-items center
	justify-content space-between
	
.top
	align-items strecth
	display flex
	padding 0.5em
	width 100%
	&__logoTecsia
		font-size 5em
	&__h1 
		color gris_B
		margin 0
		font-size 4em
		font-weight normal
	&__h1::after 
		color verde_A
		content "sia"
.nav
	width 100%	
	&__menu
		align-items center
		display flex
		justify-content space-around
		margin 0
		padding 0
		&__items 
			list-style none
			&:hover
				.nav__menu__items--atxt
					display block
				.nav__menu__items--aicon
					display none
			&--aicon
				font-size 4em 
				cursor pointer
			&--atxt 
				border-radius 50%
				color white
				display none
				font-size .9rem
				opacity .7
				padding 2em .5em
			&--atxt[data-items="azul_A"]
				background-color azul_A
			&--atxt[data-items="rosa_A"]
				background-color rosa_A
			&--atxt[data-items="amarillo_A"]
				background-color amarillo_A
			&--atxt[data-items="naranja_A"]
				background-color naranja_A
				
.bder
	border 1px solid black
	
//lanscape, tabletas portrait
@media screen and (min-width : 481px)
	.top 
		width 30%
	.nav 
		width 50%

//tabletas lanscape, laptops
@media screen and (min-width : 769px)
	html 
		font-size 120%




