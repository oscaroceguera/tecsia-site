@import "nib"
@import 'normalize'
@import 'iconfonts'
@import "../header/styles.styl"
@import "../aside/styles.styl"
@import "../footer/styles.styl"
@import "../views/styles.styl"

html  
	font-family Helvetica,sans-serif
	font-size 80%	
	
body
	background-color gris_A
a 
	color verde_A
	outline 0	
	text-decoration none
	
//lanscape, tabletas portrait
@media screen and (min-width : 481px)
	.Header-logo
		width 30%
	.Nav 
		width 50vw
	.Interes
		align-items center
		display flex
		flex-wrap wrap
		justify-content center
	.Lang 
		bottom initial
		&-link
			padding 1.5em
			transition .3s
			&:hover 
				opacity 0.5
	.Article 
		margin 3em 7em
		&-contacto
			display flex
			justify-content center
	.Contacto 
		width 20em
	.Clientes 
		align-items center
		flex-direction row
		justify-content space-around
	
	.Mapa 
		&-frame 
			width 100%
	
		
//tabletas lanscape, laptops
@media screen and (min-width : 1024px)
	html 
		font-size 100%
	body 
		margin 0 5em 
	.Article
		&-Esquemas
		&-capacitacion
			display flex
			flex-wrap wrap
			justify-content space-around
	.Esquemas-items
	.Capacitacion-items
		margin .5em
		width 15em
	.Clientes-items
		&_links
			font-size 2em
		&:hover 
			font-size 1.1em
		
